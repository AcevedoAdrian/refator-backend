<div class=" py-10 ">
    <h1 class="text-4xl my-10 font-extrabold text-center"></h1>
    <h2 class="text-center text-2xl font-extrabold">Registrate</h2>
    {{#if error}}
    <div class="max-w-md mx-auto my-10">
        <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold "> {{erro}} </p>
    </div>
    {{/if}}
    <div class="mt-8 mx-auto max-w-md">
        <div class="bg-white py-8 px-4 shadow">
            <form class="space-y-5" method="post" action="/api/sessions/register">
                <div>
                    <label for="first_name"
                        class="block text-sm uppercase text-gray-500 mb-3 font-bold">Apellido:</label>
                    <input type="text" class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                        placeholder="Ingrese su Apellido" name="first_name" id="first_name" required />
                </div>
                <div>
                    <label for="last_name" class="block text-sm uppercase text-gray-500 mb-3 font-bold">Nombre:</label>
                    <input type="text" class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                        placeholder="Ingrese su Nombre" name="last_name" id="last_name" required />
                </div>
                <div>
                    <label for="age" class="block text-sm uppercase text-gray-500 mb-3 font-bold">Edad:</label>
                    <input type="number" class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                        placeholder="Ingrese su Edad" name="age" id="age" required />
                </div>
                <div>
                    <label for="email" class="block text-sm uppercase text-gray-500 mb-3 font-bold">Email:</label>
                    <input type="email" class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                        placeholder="Ingrese su Correo Electronico" name="email" id="email" required />
                </div>

                <div>
                    <label for="password" class="block text-sm uppercase text-gray-500 mb-3 font-bold">Password</label>
                    <input type="password"
                        class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                        placeholder="Ingrese su Password" name="password" id="password" required />
                </div>
                <div>
                    <input type="submit"
                        class="w-full bg-teal-600 text-white font-bold py-3 cursor-pointer over:bg-teal-700"
                        value="Crear Cuenta">
                </div>
            </form>
        </div>
    </div>
</div>